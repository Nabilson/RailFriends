

<div class="p-3 mb-2 bg-light text-dark border border-info border-start-0 rounded-end">

<p>
  <strong>First name:</strong>
  <%= @friend.f_name %>
</p>

<p>
  <strong>Last name:</strong>
  <%= @friend.l_name %>
</p>

<p>
  <strong>Email:</strong>
  <%= @friend.email %>
</p>

<p>
  <strong>Phone:</strong>
  <%= @friend.phone %>
</p>

<p>
  <strong>Twitter:</strong>
  <%= @friend.twitter %>
</p>



<div>
  <%= link_to "Edit", edit_friend_path(@friend), class: "btn btn-secondary" %>
  <%= link_to "Back", friends_path, class: "btn btn-dark"  %> 
</div>

 <br>

</div>

<%= button_to "Delete friend", @friend, method: :delete, data: { confirm: 'Are you sure?'}, class: "btn btn-danger"  %>
